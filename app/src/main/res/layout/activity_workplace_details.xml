<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activitys.Workplace.WorkplaceDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6E7C1">


    <ImageView
        android:id="@+id/workplace_detalis_workplace_back"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:src="@drawable/ic_back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/workplace_detalis_workplace_name_tv_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_56sdp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Russel"
        android:textColor="#8BC34A"
        android:textSize="@dimen/_40ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_28sdp"
        android:background="@drawable/workplace_detalis_workplace_white_background"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workplace_detalis_workplace_name_tv_big"
        app:layout_constraintVertical_bias="0.0">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_32sdp"
            android:stretchColumns="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_24sdp"
                android:layout_marginRight="@dimen/_32sdp">

                <ImageView
                    android:id="@+id/workplace_detalis_worplace_name_icon"
                    android:layout_width="@dimen/_44sdp"
                    android:layout_height="@dimen/_44sdp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_profile_name_icon" />

                <TextView

                    android:id="@+id/workplace_detalis_worplace_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/_60sdp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Workplace name"
                    android:textColor="#212121"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/workplace_detalis_worplace_name"
                    android:layout_marginLeft="@dimen/_60sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Russel"
                    android:textColor="#757575"
                    android:textSize="@dimen/_14ssp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginRight="@dimen/_32sdp">

                <ImageView
                    android:id="@+id/workplace_detalis_worplace_company_icon"
                    android:layout_width="@dimen/_44sdp"
                    android:layout_height="@dimen/_44sdp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_profile_company_icon" />

                <TextView

                    android:id="@+id/workplace_detalis_worplace_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/_60sdp"
                    android:layout_marginTop="-2dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Company"
                    android:textColor="#212121"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/workplace_detalis_worplace_company"
                    android:layout_marginLeft="@dimen/_60sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Russell Center"
                    android:textColor="#757575"
                    android:textSize="@dimen/_14ssp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginRight="@dimen/_32sdp">

                <ImageView
                    android:id="@+id/workplace_detalis_worplace_description_icon"
                    android:layout_width="@dimen/_44sdp"
                    android:layout_height="@dimen/_44sdp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_profile_description_icon" />

                <TextView

                    android:id="@+id/workplace_detalis_worplace_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/_60sdp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Description"
                    android:textColor="#212121"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/workplace_detalis_worplace_description"
                    android:layout_marginLeft="@dimen/_60sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Programmer, Android..."
                    android:textColor="#757575"
                    android:textSize="@dimen/_14ssp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_32sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Projects:"
                android:textColor="#212121"
                android:textSize="@dimen/_20ssp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_24sdp"
                android:layout_marginRight="@dimen/_32sdp">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_32sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Members:"
                android:textColor="#212121"
                android:textSize="@dimen/_20ssp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_24sdp"
                android:layout_marginRight="@dimen/_32sdp">


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_68sdp"
                android:layout_marginLeft="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_32sdp"
                android:layout_marginRight="@dimen/_24sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:backgroundTint="#DCEDC8"
                android:fontFamily="@font/montserrat_bold"
                android:letterSpacing="0"
                android:paddingBottom="@dimen/_4sdp"
                android:stateListAnimator="@null"
                android:text="Copy workplace code"
                android:textAllCaps="false"
                android:textColor="#82AA53"
                android:textSize="@dimen/_18ssp"
                app:cornerRadius="@dimen/_12sdp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_68sdp"
                android:layout_marginLeft="@dimen/_24sdp"
                android:layout_marginRight="@dimen/_24sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:backgroundTint="#41F45236"
                android:fontFamily="@font/montserrat_bold"
                android:letterSpacing="0"
                android:paddingBottom="@dimen/_8sdp"
                android:stateListAnimator="@null"
                android:text="Delete workplace"
                android:textAllCaps="false"
                android:textColor="#BB6149"
                android:textSize="@dimen/_18ssp"
                app:cornerRadius="@dimen/_12sdp" />

        </TableLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>