<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.Project.ProjectDetails"
    android:background="#4CAF50">


    <ImageView
        android:id="@+id/profile_back_icon"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:src="@drawable/ic_back_icon_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="@dimen/_74sdp"
        android:layout_height="@dimen/_74sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_gravity="center"
        android:background="@drawable/project_logo"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:layout_marginTop="@dimen/_24sdp"
        android:text="an"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_28ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_back_icon" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        android:text="Android application"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="@font/montserrat_light"
        android:gravity="center"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        android:text="Russell"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/main_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginTop="@dimen/_24sdp"
        android:paddingTop="@dimen/_40sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_32sdp">

            <ImageView
                android:id="@+id/workplace_detalis_worplace_name_icon"
                android:layout_width="@dimen/_44sdp"
                android:layout_height="@dimen/_44sdp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_profile_name_icon" />

            <TextView

                android:id="@+id/workplace_detalis_worplace_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Project name"
                android:textColor="#212121"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/workplace_detalis_worplace_name"
                android:layout_marginLeft="@dimen/_60sdp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Russel"
                android:textColor="#757575"
                android:textSize="@dimen/_14ssp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_32sdp">

            <ImageView
                android:id="@+id/workplace_detalis_worplace_description_icon"
                android:layout_width="@dimen/_44sdp"
                android:layout_height="@dimen/_44sdp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_profile_description_icon" />

            <TextView

                android:id="@+id/workplace_detalis_worplace_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Description"
                android:textColor="#212121"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/workplace_detalis_worplace_description"
                android:layout_marginLeft="@dimen/_60sdp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Programmer, Android..."
                android:textColor="#757575"
                android:textSize="@dimen/_14ssp" />
        </RelativeLayout>


        <View
            android:id="@+id/new_workplace_lineview"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_32sdp"
            android:layout_marginRight="@dimen/_80sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:alpha="0.4"
            android:background="#757575"
            tools:layout_editor_absoluteX="42dp" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/_68sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:backgroundTint="#20F45236"
            android:fontFamily="@font/montserrat_bold"
            android:letterSpacing="0"
            android:paddingBottom="@dimen/_8sdp"
            android:stateListAnimator="@null"
            android:text="End Project "
            android:textAllCaps="false"
            android:textColor="#BB6149"
            android:textSize="@dimen/_18ssp"
            app:cornerRadius="@dimen/_12sdp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>