                    android:fontFamily="@font/montserrat_bold"
                    android:textAllCaps="false"
                    android:textColor="#F7F7F7"
                    android:textSize="@dimen/_24ssp"
                    app:cornerRadius="@dimen/_12sdp"
                    android:stateListAnimator="@null"
                    android:letterSpacing="0"
                    android:alpha= "0.0" />

            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

 </LinearLayout>